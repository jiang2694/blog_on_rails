<div class="card">
<% @posts.each do |post| %>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= link_to post.title, post_path(post) %></p>
      <footer class="blockquote-footer"> <%= post.body %> <cite title="Source Title">Source Title</cite></footer>
    </blockquote>
  </div>
  <% end %>
</div>